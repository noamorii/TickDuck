<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".activities.TodoDetailActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/new_todo_toolbar"
        android:layout_width="391dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center" />

    <RelativeLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/TodoDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:gravity="center|center_horizontal|center_vertical"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text=""
            android:textSize="20sp" />

        <TextView
            android:id="@+id/todoCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:gravity="center|center_horizontal|center_vertical"
            android:text=""
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/TodoName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:text=""
        android:textAlignment="textStart"
        android:textSize="30sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:background="@drawable/calendar_cell_background2"
        app:cardBackgroundColor="#0D141B"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/TodoDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:text=""
            android:textSize="20sp" />
    </androidx.cardview.widget.CardView>

</LinearLayout>